
@model IEnumerable<NsTalkPal.Models.UserProfile>
<div id="summaryView" data-bind="visible: isSummary">
@*<div id="summaryView" >*@
    <div class="panel">
        <div class="panel-heading nstp-panel-heading">
            Netsaimada Users
        </div>
    </div>

    <div class="panel-body">
        
        <table class="table table-striped table-condensed">
            <thead class="bg-netsaimada">
                <tr>
                    <th>User Profile</th>
                    <th>Personal Info</th>
                    <th>Contact</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: { data: userProfiles, afterRender: loadImage }">
                <tr>
                    <td>
                        <div class="nstp-roundpic-frame bg-netsaimada media-left">
                            <img data-bind="attr:{ id: 'profileImage_' + UserId }" src="~/Content/images/loading_spinner.gif" class="img-circle media-object" alt="Profile Picture" />
                        </div>

                    </td>
                    <td>
                        <div class="row">
                            <div class="col-xs-8 col-sm-5 bg-netsaimada nstp-tl-rouned nstp-tl-frame">
                                <p>User Id</p>
                            </div>
                            <div class="col-xs-8 col-sm-6 bg-clear-netsaimada nstp-tr-rouned nstp-tl-frame">
                                <p data-bind="text: UserId"></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-sm-5 bg-netsaimada nstp-tl-frame">
                                <p>Name</p>
                            </div>
                            <div class="col-xs-8 col-sm-6 bg-clear-netsaimada nstp-tl-frame">
                                <p data-bind="text: Name"></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-sm-5 bg-netsaimada nstp-tl-frame">
                                <p>Surname</p>
                            </div>
                            <div class="col-xs-8 col-sm-6 bg-clear-netsaimada nstp-tl-frame">
                                <p data-bind="text: Surname"></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-sm-5 bg-netsaimada nstp-tl-frame nstp-bl-rouned">
                                <p>Nickname</p>
                            </div>
                            <div class="col-xs-8 col-sm-6 bg-clear-netsaimada nstp-tl-frame nstp-br-rouned">
                                <p data-bind="text: Nickname"></p>
                            </div>
                        </div>

                    </td>
                    <td>
                        <div class="row">
                            <div class="col-xs-8 col-sm-5 bg-netsaimada nstp-tl-rouned nstp-tl-frame">
                                <p>City</p>
                            </div>
                            <div class="col-xs-8 col-sm-6 bg-clear-netsaimada nstp-tr-rouned nstp-tl-frame">
                                <p data-bind="text: City"></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-sm-5 bg-netsaimada nstp-tl-frame">
                                <p>Neighborhood</p>
                            </div>
                            <div class="col-xs-8 col-sm-6 bg-clear-netsaimada nstp-tl-frame">
                                <p data-bind="text: Neighborhood"></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-sm-5 bg-netsaimada nstp-tl-frame nstp-bl-rouned">
                                <p>Email</p>
                            </div>
                            <div class="col-xs-8 col-sm-6 bg-clear-netsaimada nstp-tl-frame nstp-br-rouned">
                                <p data-bind="text: Email"></p>
                            </div>
                        </div>
                    </td>

                    <td>
                        <!--ojo si no se hace el function(){} la funcion del click se ejecuta en la carga y no cuando sucede el click -->
                        <button class="btn btn-xs btn-nstp" data-bind="click: function(){$parent.removeItem(UserId)}">Remove</button>
                    </td>
                </tr>
            </tbody>
        </table>
